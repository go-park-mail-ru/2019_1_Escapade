{
	"server": {
		"host": "http://localhost",
		"name": "auth",
		"maxConn": 100,
		"maxHeaderBytes": 16384,
		"timeouts": {
			"ttl":"10s",
			"read":"10s",
			"write":"15s",
			"idle":"5s",
			"wait":"0",
			"exec":"60s"
		}
	},
	"auth": {
		"salt": "3yffZ5D03wdnfWAA",
		"accessTokenExpire": 2,
		"refreshTokenExpire": 336,
		"isGenerateRefresh": true,
		"withReserve": true,
		"tokenType": "Bearer"
	  },
	"dataBase": {
		"driverName": "postgres",
		"url": "DATABASE_URL",
		"connectionString": "postgres://rolepade:escapade@pg:5432/escabase?sslmode=disable",
		"authConnectionString": "postgres://auth:auth@pg-auth:5432/authbase?sslmode=disable",
		"maxOpenConns": 20,
		"PageGames": 2,
		"PageUsers": 100
	},
	"cors": {
		"origins": [
			"http://localhost:8080",
			"http://localhost:3000",
			"http://localhost:3001",
			"http://localhost:3002",
			"https://escapade-frontend.herokuapp.com",
			"https://ser.ru.com",
			"https://explosion.team"
		],
		"headers": [
			"Content-type",
			"Authorization-access",
			"Authorization-type",
			"Authorization-refresh",
			"Authorization-expire"
		],
		"credentials": "true"
	},
	"session": {
		"name": "sessionid",
		"path": "/",
		"length": 16,
		"lifetime": 604800,
		"httpOnly": true
	}
}
